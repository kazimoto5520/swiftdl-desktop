{
  "name": "swiftdl-desktop",
  "version": "1.0.0",
  "main": "dist/app/main.js",
  "type": "commonjs",
  "scripts": {
    "build": "tsc && cpx \"src/renderer/**/*\" dist/renderer",
    "start": "npm run build && electron .",
    "package": "electron-builder --mac",
    "package:dev": "electron-builder --mac --dir"
  },
  "build": {
    "appId": "com.swiftdl.app",
    "productName": "SwiftDL",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    }
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "cpx": "^1.5.0",
    "electron": "^39.0.0",
    "electron-builder": "^24.9.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "node-fetch": "^2.7.0"
  }
}
